

<ul>
  <% @property.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
  <% end %>
</ul>


<%= form_for(@property) do |f| %>
  <div class="form-group">
    <%= f.label(:headline, "Headline", :class => "control-label")%>
    <%= f.text_field(:headline, :class => "form-control") %>
  </div>

  <div class="form-group">
    <%= f.label(:description, "Description", :class => "control-label")%>
    <%= f.text_area(:description, :rows => "10", :class => "form-control") %>
  </div>

  <div class="form-group">
    <%= f.label(:address, "Address", :class => "control-label")%>
    <%= f.text_area(:address, :rows => "5", :class => "form-control") %>
  </div>

  <div class="form-group">
    <%= f.label(:price, "Price per night", :class => "control-label")%>
    <%= f.text_field(:price, :class => "form-control") %>
  </div>

  <%= f.submit("Add property", :class => "btn btn-default btn-primary") %>


<% end %>
